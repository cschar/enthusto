extends layout

block content
  .page-header

    h3 Detail    
    div
      p= book.name
      p= book.id

    h1  Graph 

    div#vueapp
      
      h1 {{listenerID}} 
        div(v-if="listenerID == users[0].listenerID") [Master]

          
          


      h1 Users
      ul
        li(v-for="user in users") {{ user }}
          //- p= {{ user.id }}
        
      ul#users
      div(v-if="listenerID == users[0].listenerID")
        button#masterToggle(v-on:click="masterToggle") toggle
        button#masterReset(v-on:click="masterReset") reset
      button#incr(v-on:click="incr")
        i.fa.fa-sort-amount-asc.fa-2x increment 

      

    canvas#canvasSection Error, canvas is not supported
    iframe#sc-widget(src='https://w.soundcloud.com/player/?url='+book.name
    , width='100%', height='465', scrolling='no', frameborder='no')
    
    

block extrajs
  script(src='https://w.soundcloud.com/player/api.js', type='text/javascript')
  script(src='/js/enthusto.js')